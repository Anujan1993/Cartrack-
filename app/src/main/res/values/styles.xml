<resources>
    <!-- Base application Light theme. -->
    <style name="AppThemeLite" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="toolbarColor">@color/primaryColor</item>
        <item name="colorAccent">@color/primaryLightColor</item>
        <item name="buttonColor">@color/primaryLightColor</item>
        <item name="backgroundColor">@color/primaryTextColor</item>
        <item name="cardBackground">@color/primaryTextColor</item>
        <item name="tint">@color/secondaryDarkTextColor</item>
    </style>
